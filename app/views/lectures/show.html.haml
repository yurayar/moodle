.container-fluid{ class: "lecturecoverphoto"}
  .navbar-brand{class: "name-lecture"}
    .container-fluid
      .list-inline
        = @lecture.name
  = image_tag @lecture.coverphoto, class: "coverimage"
  .navbar-default{class: "lecture-actions"}
    .container-fluid
      = link_to 'Announcements', announcement_path, class: "btn btn-link btn-md"
.container-fluid{class: "feed"}
  - @announcements.where(:lecture => @lecture).last(3).each  do |anno|
    .list_announcement
      = image_tag anno.annphoto, class:"thumb"
      %table{class:"table-hover table-responsive table-announcement"}
        %tbody
          %tr
            %td= link_to anno.title, anno, :action => :show, class: "btn btn-link"
          %tr
            %td= sanitize (anno.content.truncate(300, separator: '</p>'))
          %tr
            %td= anno.lecture.name
.col-lg-5

