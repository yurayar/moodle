%html
  %body
    .container-fluid{class: "content_show_home"}
      .row
        .col-lg-6
          .container-fluid{class: "search_bar"}
            .search
              = search_form_for @q do |f|
                .form-inline
                  =f.search_field :name_start, class: "form-control", placeholder: "Search"
                  =f.submit "Go", class: "btn btn-success"
                  - if user_signed_in?
                    = link_to('Logout', destroy_user_session_path, :method => :delete, class:"btn btn-danger")
                  - else
                    = link_to 'Log In', new_user_session_path, class: "btn btn-success"
                    = link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-primary"
          .container-fluid{class: "listing"}
            - @lectures.each do |lecture|
              .list_lect
                %table{class:"table-hover table-responsive tablestyle"}
                  %tbody
                    %tr
                      %td= link_to lecture.name, lecture, :action => :show, class: "btn btn-link"
                      %td{class: "ann_count"}
                        .count-wrap{class: "btn btn-primary"}
                          .count{class: "badge"}
                            = lecture.ann_count
        .col-lg-6
          .navbar-default{class: "admin-nav"}
            %table{class:"table-admin"}
              %tbody
                %tr
                  %td= link_to 'New Lecture', new_lecture_path, class: "btn btn-link"
                  %td= link_to 'New Teacher', new_teacher_path, class: "btn btn-link"
                  %td= link_to 'New Announcement', new_announcement_path, class: "btn btn-link"
                %tr
                  %td= link_to 'Edit Lectures', lectures_path, class: "btn btn-link"
                  %td= link_to 'Edit Announcements', announcements_path, class: "btn btn-link"
                  %td= link_to 'Edit Teachers', teachers_path, class: "btn btn-link"
          - @announcements.each do |anno|
            .list_announcement
              %table{class:"table-hover table-responsive table-announcement"}
                %tbody
                  %tr
                    %td= link_to anno.title, anno, :action => :show, class: "btn btn-link"
                  %tr
                    %td= truncate(anno.content.html_safe, :length => 140)
                  %tr
                    %td= anno.lecture.name
    .container-fluid{class:"footer"}